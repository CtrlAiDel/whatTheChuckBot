{
  "keywords": [],
  "main": "index.js",
  "name": "WhatTheChuckBot",
  "version": "1.0.0",
  "description": "A discord bot for welcoming cards",
  "author": "RV√ê",
  "license": "ISC",
  "assets": "",
  "scripts": {
    "uglify": "node ./gulp/main.js",
    "watch": "npm run build && tsc -w",
    "build": "rm -rf dist node_modules && npm i && tsc && npm run copyExtraFiles",
    "start": "npm run build && npm run sentry:ci && npm run nodeDist",
    "nodeDist": "node ./dist/src/index.js",
    "copyExtraFiles": "cp -rf ./api/certs -t ./dist/api",
    "clear-branches": "git branch | xargs git branch -D",
    "sentry:ci": "sentry-cli sourcemaps inject --org rvdprojects --project what-the-chuck ./dist && sentry-cli sourcemaps upload --org rvdprojects --project what-the-chuck ./dist"
  },
  "dependencies": {
    "@fabricio-191/valve-server-query": "^4.1.9",
    "@sentry/cli": "^2.31.0",
    "@sentry/node": "^7.111.0",
    "cors": "^2.8.5",
    "discord-canvas": "^1.5.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "fs": "^0.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "helmet": "^7.1.0",
    "https": "^1.0.0",
    "mongodb": "^6.5.0",
    "node-fetch": "^2.7.0",
    "openai": "^4.38.2",
    "pino": "^8.20.0",
    "youtubei.js": "^5.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/jquery": "^3.5.29",
    "@types/node": "^20.12.7",
    "express": "^4.19.2",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-uglify": "^3.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "uglify-js": "^3.17.4"
  }
}
